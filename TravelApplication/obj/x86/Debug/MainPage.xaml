<Page
    x:Class="TravelApplication.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravelApplication"
    xmlns:control="using:TravelApplication.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <!--Reusable Text Style for Page -->
        <Style x:ConnectionId='1' x:Name="MainPageTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="MidnightBlue"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Page.Resources>
    <!--Main Page Grid -->
    <Grid x:ConnectionId='2' x:Name="MainGrid"
          HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch" 
          Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <!--Stack Panel to Vertically lay out Main Page components-->
        <StackPanel x:ConnectionId='3' x:Name="MainStackPanel" 
                    Orientation="Vertical" 
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch">
            <!--Top Application Border Bar -->
            <Border x:ConnectionId='4' x:Name="TravelAppBorder" Background="MidnightBlue">
                <StackPanel x:ConnectionId='30' Orientation="Horizontal" x:Name="BorderStack">
                    <RelativePanel HorizontalAlignment="Right" VerticalAlignment="Center"
                       BorderBrush="MidnightBlue" BorderThickness="2" Padding="10" Background="LightBlue">
                        <RelativePanel HorizontalAlignment="Center" VerticalAlignment="Center"
                       BorderBrush="MidnightBlue" BorderThickness="2">
                            <RelativePanel.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="White" Offset="1"/>
                                </LinearGradientBrush>
                            </RelativePanel.Background>
                            <!-- Image is set to Button. When User clicks it takes them back to home page-->
                            <Button x:ConnectionId='32' x:Name="HomeBtn"                      >
                                <Image MaxWidth="50">
                                    <Image.Source>
                                        <BitmapImage UriSource="ms-appx:///Assets/Travel.gif"/>
                                    </Image.Source>
                                </Image>
                            </Button>
                        </RelativePanel>
                    </RelativePanel>
                    <TextBlock x:ConnectionId='31' Text="Travel Application" 
                               FontFamily="Georgia" FontSize="32" 
                               FontWeight="Bold"
                               Foreground="White" Margin="10,0,0,0"
                               Padding="5"
                               x:Name="BorderText" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Top Menu Bar -->
            <Border x:ConnectionId='5' x:Name="TopMenuBorder" Background="White" BorderBrush="MidnightBlue" BorderThickness="2">
                <StackPanel x:ConnectionId='13' x:Name="TopMenuBarStack" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!--Travel Package Button -->
                    <Button x:ConnectionId='14' Padding="5" x:Name="TravelBtn" Background="Transparent"                                >
                        <RelativePanel x:ConnectionId='27' x:Name="TravelBtnStack">
                            <AppBarButton x:ConnectionId='28' x:Name="TravelPackagesBtn" Background="Transparent" 
                                      ToolTipService.ToolTip="View all Travel Packages"                           
                                      Icon="World"
                                      MaxHeight="50"
                                      MaxWidth="35"
                                      RelativePanel.AlignLeftWithPanel="True"
                                      RelativePanel.AlignVerticalCenterWithPanel="True" >
                            </AppBarButton>
                            <TextBlock x:ConnectionId='29' RelativePanel.RightOf="TravelPackagesBtn" RelativePanel.AlignVerticalCenterWith="TravelPackagesBtn"  x:Name="TravelBtnText"
                                       Text="Travel Packages"
                                       Style="{StaticResource MainPageTextStyle}"/>
                        </RelativePanel>
                    </Button>
                    
                    <!--Hotel Options Button -->
                    <Button x:ConnectionId='15' Padding="5" x:Name="HotelOptionBtn" 
                            Background="Transparent"                       >
                        <RelativePanel x:ConnectionId='24' x:Name="HotelBtnPanel">
                            <AppBarButton x:ConnectionId='25' x:Name="HotelBtn" Background="Transparent" 
                                      ToolTipService.ToolTip="View all Travel Packages"                           
                                      Icon="Home"
                                      MaxHeight="50"
                                      MaxWidth="35"
                                      RelativePanel.AlignLeftWithPanel="True"
                                      RelativePanel.AlignVerticalCenterWithPanel="True">
                            </AppBarButton>
                            <TextBlock x:ConnectionId='26' RelativePanel.RightOf="HotelBtn" RelativePanel.AlignVerticalCenterWith="HotelBtn"  
                                       x:Name="HotelBtnText" Text="Hotels" 
                                       Style="{StaticResource MainPageTextStyle}"/>
                        </RelativePanel>
                    </Button>
                    <!--Featured Destination Option Button -->
                    <Button x:ConnectionId='16' Padding="5" x:Name="FeaturedOptionBtn" 
                            Background="Transparent"                          >
                        <RelativePanel x:ConnectionId='21'  x:Name="FeatureBtnPanel">
                            <AppBarButton x:ConnectionId='22' x:Name="FeaturedBtn" Background="Transparent" 
                                      ToolTipService.ToolTip="View Flight Offerings"                           
                                      Icon="Map"
                                      MaxHeight="50"
                                      MaxWidth="35"
                                      RelativePanel.AlignLeftWithPanel="True"
                                      RelativePanel.AlignVerticalCenterWithPanel="True"
                                      >
                            </AppBarButton>
                            <TextBlock x:ConnectionId='23' RelativePanel.RightOf="FeaturedBtn" RelativePanel.AlignVerticalCenterWith="FeaturedBtn" 
                                   x:Name="FeatureBtnText" Text="Featured Destination" 
                                   Style="{StaticResource MainPageTextStyle}"/>
                        </RelativePanel>
                    </Button>
                    <!--Search Travel Options Button -->
                    <Button x:ConnectionId='17' Padding="5" x:Name="SearchOptBtn" 
                            Background="Transparent"                        >
                        <RelativePanel x:ConnectionId='18'  x:Name="SearchBtnPanel">
                            <AppBarButton x:ConnectionId='19' x:Name="SearchBtn" Background="Transparent" 
                                      ToolTipService.ToolTip="Search Travel Package Offerings"                           
                                      Icon="Find"
                                      MaxHeight="50"
                                      MaxWidth="35"
                                      RelativePanel.AlignLeftWithPanel="True"
                                      RelativePanel.AlignVerticalCenterWithPanel="True"
                                     >
                            </AppBarButton>
                            <TextBlock x:ConnectionId='20' RelativePanel.RightOf="SearchBtn" RelativePanel.AlignVerticalCenterWith="SearchBtn" 
                                   x:Name="SearchBtnText" Text="Search Travel Packages" 
                                   Style="{StaticResource MainPageTextStyle}"
                                   Margin="0,0,10,0"/>
                        </RelativePanel>
                    </Button>
                </StackPanel>
            </Border>
            <Frame x:ConnectionId='6' x:Name="MainFrame" 
                   VerticalAlignment="Stretch" 
                   HorizontalAlignment="Stretch"
                   MinHeight="475"
                   />
            <Border x:ConnectionId='7' x:Name="BottomMenuBorder" Background="White" BorderBrush="MidnightBlue" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" Margin="5,0,5,0">
                            <AppBarButton x:ConnectionId='11' Icon="Previous" x:Name="PreviousArrow" 
                                                                     
                                          BorderBrush="MidnightBlue"
                                          BorderThickness="1"
                                          Background="MidnightBlue"
                                          Foreground="White"/>
                            <TextBlock x:ConnectionId='12' x:Name="Previous" Text="Previous" 
								       Style="{StaticResource MainPageTextStyle}"
							           VerticalAlignment="Center"
								       HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="5,0,5,0" >
                            <AppBarButton x:ConnectionId='9' Icon="Next" x:Name="NextArrow" 
                                                                 
                                          BorderBrush="MidnightBlue"
                                          BorderThickness="1"
                                          Background="MidnightBlue"
                                          Foreground="White"/>
                            <TextBlock x:ConnectionId='10' x:Name="Next" Text="Next" 
                                      Style="{StaticResource MainPageTextStyle}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>

                    </StackPanel>
                    <control:AppOptionsControl x:ConnectionId='8'  x:Name="AppOptionsCntrl"
                                                Grid.Column="1"/>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>

