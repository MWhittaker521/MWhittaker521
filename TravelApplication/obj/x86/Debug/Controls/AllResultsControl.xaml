<UserControl
    x:Class="TravelApplication.Controls.AllResultsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravelApplication.Models"
    xmlns:models="using:TravelApplication.ViewModels"
    xmlns:model ="using:TravelApplication.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.DataContext>
        <models:ViewModel/>
    </UserControl.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:ConnectionId='1' x:Name="ResultsListView" 
                   Margin="20" DataContext="{StaticResource TravelPack}"
                  MaxHeight="600"
                  MaxWidth="1100">
            <ListView.ItemTemplate>
                <DataTemplate x:Name="IDDataTemplate"                              >
                    <StackPanel>
                        <Image Width="200" Height="200" Source="{Binding imageSource}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Name="DestName" Text="{Binding dest}" 
                                           FontFamily="Georgia"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           FontWeight="Bold"
                                           Foreground="MidnightBlue"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="15"
                                           />
                        <TextBlock Name="DestLoc" Text="{Binding locate}" 
                                           FontFamily="Georgia"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           FontWeight="SemiBold"
                                           Foreground="MidnightBlue"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="15"
                                           />
                        <TextBlock Name="DestDescription" Text="{Binding descript}" 
                                   FontFamily="Georgia"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   FontWeight="SemiBold"
                                   Foreground="MidnightBlue"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="15"
                                   TextTrimming="CharacterEllipsis"
                                   />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>

